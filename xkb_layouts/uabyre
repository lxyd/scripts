// Supplementary keys for entering Ukrainian, Belorussian 
// and Russian Empire's letters with l3_shift
// Alexey Dubinin <lxyd@lxyd.net>

default partial
xkb_symbols "ytsuken" {
    key <TLDE> { [ NoSymbol, NoSymbol, apostrophe,                NoSymbol                  ] };
    key <AD03> { [ NoSymbol, NoSymbol, Byelorussian_shortu,       Byelorussian_SHORTU       ] };
    key <AD06> { [ NoSymbol, NoSymbol, U0463,                     U0462                     ] }; // YAT
    key <AD07> { [ NoSymbol, NoSymbol, Ukrainian_ghe_with_upturn, Ukrainian_GHE_WITH_UPTURN ] };
    key <AD08> { [ NoSymbol, NoSymbol, Ukrainian_i,               Ukrainian_I               ] };
    key <AD09> { [ NoSymbol, NoSymbol, U0473,                     U0472                     ] }; // FITA
    key <BKSL> { [ NoSymbol, NoSymbol, U0475,                     U0474                     ] }; // IZHITSA
    key <AC07> { [ NoSymbol, NoSymbol, Cyrillic_io,               Cyrillic_IO               ] };
    key <AC11> { [ NoSymbol, NoSymbol, Ukrainian_ie,              Ukrainian_IE              ] };
    key <AB05> { [ NoSymbol, NoSymbol, Ukrainian_yi,              Ukrainian_YI              ] };
};
